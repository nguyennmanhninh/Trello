@model StudentManagementSystem.Models.User

@{
    ViewData["Title"] = "Xóa Người dùng";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="modern-card border-danger">
                <div class="mb-4">
                    <h2 class="mb-2 text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Xóa Người dùng
                    </h2>
                    <p class="text-muted mb-0">Bạn có chắc chắn muốn xóa người dùng này?</p>
                </div>

                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Cảnh báo:</strong> Thao tác này không thể hoàn tác!
                </div>

                <dl class="row">
                    <dt class="col-sm-4">
                        <i class="fas fa-id-card text-muted me-2"></i>Mã người dùng
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.UserId</strong>
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user-circle text-muted me-2"></i>Tên đăng nhập
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Username
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-link text-muted me-2"></i>Mã Liên Kết
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.EntityId ?? "Không có")
                    </dd>

                    <dt class="col-sm-4">
                        <i class="fas fa-user-tag text-muted me-2"></i>Vai trò
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-user-shield me-1"></i>Admin
                            </span>
                        }
                        else if (Model.Role == "Teacher")
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-chalkboard-teacher me-1"></i>Giáo viên
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-user-graduate me-1"></i>Sinh viên
                            </span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
