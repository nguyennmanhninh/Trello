@model StudentManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Cập Nhật Thông Tin Cá Nhân";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-person-circle"></i> Cập Nhật Thông Tin Cá Nhân</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="TeacherId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="TeacherId" class="form-label"></label>
                                <input asp-for="TeacherId" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DepartmentId" class="form-label"></label>
                                <input value="@Model.Department?.DepartmentName" class="form-control" readonly />
                                <input type="hidden" asp-for="DepartmentId" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="true">Nam</option>
                                    <option value="false">Nữ</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tên Đăng Nhập</label>
                                <input value="@Model.Username" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-key"></i> Đổi Mật Khẩu (Tùy chọn)</h5>
                        <p class="text-muted small">Để thay đổi mật khẩu, vui lòng nhập cả hai trường bên dưới</p>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="currentPassword" class="form-label">Mật Khẩu Hiện Tại</label>
                                <input type="password" name="currentPassword" id="currentPassword" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label for="newPassword" class="form-label">Mật Khẩu Mới</label>
                                <input type="password" name="newPassword" id="newPassword" class="form-control" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info text-white">
                                <i class="bi bi-save"></i> Cập Nhật Thông Tin
                            </button>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại Dashboard
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
