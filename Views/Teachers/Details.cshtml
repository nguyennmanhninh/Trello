@model StudentManagementSystem.Models.Teacher

@{
    ViewData["Title"] = "Chi Tiết Giáo Viên";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-person-badge"></i> Chi Tiết Giáo Viên</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã GV:</dt>
                        <dd class="col-sm-8"><strong>@Model.TeacherId</strong></dd>

                        <dt class="col-sm-4">Họ và Tên:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Ngày Sinh:</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Giới Tính:</dt>
                        <dd class="col-sm-8">@(Model.Gender ? "Nam" : "Nữ")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">SĐT:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Địa Chỉ:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Khoa:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Department != null)
                            {
                                <span class="badge bg-primary">@Model.Department.DepartmentCode</span>
                                @Model.Department.DepartmentName
                            }
                            else
                            {
                                <span class="text-muted">Chưa xác định</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Tên ĐN:</dt>
                        <dd class="col-sm-8">@Model.Username</dd>
                    </dl>
                </div>
            </div>

            @if (Model.Classes != null && Model.Classes.Any())
            {
                <hr />
                <h5 class="mt-4"><i class="bi bi-people"></i> Lớp Chủ Nhiệm</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Tên Lớp</th>
                                <th>Khoa</th>
                                <th class="text-center">Sĩ Số</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cls in Model.Classes)
                            {
                                <tr>
                                    <td>@cls.ClassName</td>
                                    <td>@cls.Department?.DepartmentName</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@cls.Students.Count SV</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (Model.Courses != null && Model.Courses.Any())
            {
                <hr />
                <h5 class="mt-4"><i class="bi bi-book"></i> Môn Giảng Dạy</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Môn Học</th>
                                <th>Khoa</th>
                                <th class="text-center">Số TC</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Courses)
                            {
                                <tr>
                                    <td>@course.CourseName</td>
                                    <td>@course.Department?.DepartmentName</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@course.Credits TC</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                <a asp-action="Edit" asp-route-id="@Model.TeacherId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
