<!DOCTYPE html>
<html lang="vi">
<head>
<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ Thống Quản Lý Sinh Viên</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="modern-body">
    <header>
 <nav class="navbar navbar-expand-lg navbar-dark modern-navbar shadow-lg">
   <div class="container-fluid">
       <a class="navbar-brand modern-brand" asp-controller="Dashboard" asp-action="Index">
       <i class="fas fa-graduation-cap me-2"></i>
       <span class="brand-text">Student Management</span>
     </a>
     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
  <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
   @if (Context.Session.GetString("UserId") != null)
    {
    var userRole = Context.Session.GetString("UserRole");
      var userName = Context.Session.GetString("UserName");
    
 <ul class="navbar-nav me-auto">
 <li class="nav-item">
 <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
   <i class="bi bi-house-door"></i> Trang Chủ
       </a>
    </li>

      @if (userRole == "Admin")
        {
     <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
     <i class="bi bi-people"></i> Sinh Viên
 </a>
       <ul class="dropdown-menu">
    <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Danh sách</a></li>
  <li><a class="dropdown-item" asp-controller="Students" asp-action="Create">Thêm mới</a></li>
        </ul>
     </li>
       <li class="nav-item dropdown">
       <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
      <i class="bi bi-person-badge"></i> Giáo Viên
       </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" asp-controller="Teachers" asp-action="Index">Danh sách</a></li>
  <li><a class="dropdown-item" asp-controller="Teachers" asp-action="Create">Thêm mới</a></li>
        </ul>
        </li>
    <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="bi bi-building"></i> Lớp & Khoa
        </a>
 <ul class="dropdown-menu">
       <li><a class="dropdown-item" asp-controller="Classes" asp-action="Index">Lớp học</a></li>
    <li><a class="dropdown-item" asp-controller="Departments" asp-action="Index">Khoa</a></li>
       </ul>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Courses" asp-action="Index">
    <i class="bi bi-book"></i> Môn Học
     </a>
       </li>
      <li class="nav-item">
   <a class="nav-link" asp-controller="Grades" asp-action="Index">
     <i class="bi bi-graph-up"></i> Điểm
       </a>
     </li>
      <li class="nav-item">
   <a class="nav-link" asp-controller="Users" asp-action="Index">
     <i class="bi bi-person-gear"></i> Người Dùng
       </a>
     </li>
      <li class="nav-item">
   <a class="nav-link" asp-controller="Reports" asp-action="Index">
     <i class="bi bi-file-earmark-bar-graph"></i> Báo Cáo
       </a>
     </li>
      }
      else if (userRole == "Teacher")
 {
 <li class="nav-item">
   <a class="nav-link" asp-controller="Students" asp-action="Index">
    <i class="bi bi-people"></i> Sinh Viên
        </a>
       </li>
 <li class="nav-item">
   <a class="nav-link" asp-controller="Classes" asp-action="Index">
    <i class="bi bi-building"></i> Lớp Học
        </a>
       </li>
     <li class="nav-item">
       <a class="nav-link" asp-controller="Grades" asp-action="Index">
   <i class="bi bi-graph-up"></i> Quản Lý Điểm
        </a>
    </li>
 <li class="nav-item">
    <a class="nav-link" asp-controller="Courses" asp-action="Index">
      <i class="bi bi-book"></i> Môn Học
  </a>
     </li>
     <li class="nav-item">
   <a class="nav-link" asp-controller="Reports" asp-action="Index">
     <i class="bi bi-file-earmark-bar-graph"></i> Báo Cáo
       </a>
     </li>
     }
   else if (userRole == "Student")
{
     <li class="nav-item">
 <a class="nav-link" asp-controller="Grades" asp-action="MyGrades">
        <i class="bi bi-graph-up"></i> Điểm Của Tôi
    </a>
</li>
       <li class="nav-item">
   <a class="nav-link" asp-controller="Courses" asp-action="Index">
        <i class="bi bi-book"></i> Môn Học
        </a>
      </li>
   }
     </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (userRole == "Teacher")
                                {
                                    <li><a class="dropdown-item" asp-controller="Teachers" asp-action="EditProfile">
                                        <i class="bi bi-person-gear"></i> Cập nhật thông tin
                                    </a></li>
                                }
                                else if (userRole == "Student")
                                {
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="EditProfile">
                                        <i class="bi bi-person-gear"></i> Cập nhật thông tin
                                    </a></li>
                                }
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="bi bi-key"></i> Đổi mật khẩu
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
        }
  </div>
       </div>
 </nav>
    </header>

    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
   {
   <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
 </div>
      }

  @if (TempData["ErrorMessage"] != null)
{
   <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
      <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
   <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
       </div>
 }

        <main role="main" class="pb-3">
@RenderBody()
        </main>
    </div>

    <footer class="modern-footer">
        <div class="container">
            <div class="row align-items-center py-4">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">
                        <i class="fas fa-copyright me-1"></i> 2025 Student Management System
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <span class="text-muted">Phát triển bởi </span>
                    <span class="badge bg-gradient-primary">ASP.NET Core 8.0</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Smooth Animations -->
    <script>
        // Fade in animations
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card, .alert');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Active nav link
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
